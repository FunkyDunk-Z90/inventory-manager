{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "typeRoots": ["node_modules/@types", "./src/types"],
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "types": ["node"],
        "moduleResolution": "node"
    },
    "include": ["src", "src/types"],
    "ts-node": {
        "files": true
    }
}
